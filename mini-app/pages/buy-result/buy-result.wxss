
.mod-pay-result {
	height: 100%;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	flex-direction: column
}

.mod-pay-result .successful-img {
	width: 260rpx;
	margin-top: 280rpx
}

.mod-pay-result .successful-img.less {
	margin-top: 142rpx
}

.mod-pay-result .title {
	font-size: 40rpx;
	text-align: center;
	margin-top: 84rpx
}

.mod-pay-result .back-buy {
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 96rpx;
	width: 528rpx;
	height: 88rpx;
	border: 0;
	color: #000;
	background-color: #ffda3b;
	box-shadow: 0 2rpx 10rpx 0 #FFE3A9
}

.mod-pay-result .back-buy.fixed {
	position: fixed;
	bottom: 136rpx;
	left: 50%;
	margin-left: 264rpx
}

.mod-pay-result .coupons-part {
	margin-top: 110rpx;
	display: flex;
	flex-direction: column
}

.mod-pay-result .coupons-part .tips-part {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 40rpx
}

.mod-pay-result .coupons-part .tips-part .liner {
	width: 88rpx;
	height: 2rpx;
	border-radius: 12rpx
}

.mod-pay-result .coupons-part .tips-part .liner.before {
	background-image: linear-gradient(-90deg,#333 0,rgba(51,51,51,.5) 100%)
}

.mod-pay-result .coupons-part .tips-part .liner.after {
	background-image: linear-gradient(-90deg,rgba(51,51,51,.5) 0,#333 100%)
}

.mod-pay-result .coupons-part .tips-part .tips {
	padding: 20rpx;
	padding-top: 0;
	padding-bottom: 0
}

.mod-pay-result .coupons-part .coupon {
	display: flex;
	align-items: center;
	justify-content: center;
	padding-top: 38rpx;
	padding-right: 0rpx;
	padding-bottom: 10rpx;
	padding-left: 0rpx;
	background-color: #FFFCE0
}

.mod-pay-result .coupons-part .trim {
	width: 750rpx
}
